                this._getCachedOrCalculateRegime(true).catch(err => {
                    console.warn('[AutoScannerService] ‚ö†Ô∏è Regime calculation failed (non-critical):', err.message);
                }),
                
                // Persist wallet summary (non-blocking)
                this._persistLatestWalletSummary().catch(err => {
                    console.warn('[AutoScannerService] ‚ö†Ô∏è Wallet summary persistence failed (non-critical):', err.message);
                }),
                
                // Fetch Fear & Greed Index (non-blocking with timeout)
                Promise.race([
